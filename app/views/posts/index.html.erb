<h1>Posts</h1>
<table>
	<tr> 
		<th>Titulo</th>
		<th>Texto</th>
		<th>Ver</th>
		<th>Editar</th>
		<th>Eliminar</th>
	</tr>
	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.text %></td>
			<td><%= link_to 'Show', post_path(post) %></td>
			<td><%= link_to 'Edit', edit_post_path(post) %></td>
			<td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
		</tr>
	<% end %>
</table>
<div>
	<%= link_to "Nuevo post", new_post_path %>	
</div>