<div class="border-form-div">
  
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-signin", :role => "form"}) do |f| %>
    <h2 class="form-signin-heading">Sing in</h2>
    <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Your email", :required => true %>
    <%= f.password_field :password, :class => "form-control", :placeholder => "Your password", :required => true %>
    <% if devise_mapping.rememberable? -%>
      <label class="checkbox"> <%= f.check_box :remember_me %> Remember me</label>
    <% end -%>
    <%= f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>