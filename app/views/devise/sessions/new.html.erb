<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="page-header">
      <h2>Iniciar sesión</h2>    
    </div>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-signin", :role => "form"}) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Tu correo electrónico" %>      
      </div>
      <div class="form-group">
        <%= f.password_field :password, :class => "form-control", :placeholder => "Tu contraseña" %>      
      </div>
      <div class="form-group">
        <% if devise_mapping.rememberable? -%>
          <label class="checkbox"> <%= f.check_box :remember_me %>Recordarme</label>
        <% end -%>      
      </div>
      <div class="form-group">
        <%= f.submit "Entrar", :class => "btn btn-lg btn-primary btn-block" %>      
      </div>
    <% end %>  
    <%= render "devise/shared/links" %>      
  </div>
</div>
