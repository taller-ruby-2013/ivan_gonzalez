<div class="row">  
  <div class="col-md-6 col-md-offset-3">
    <div class="page-header">
      <h2>Crear nueva cuenta</h2>  
    </div>  
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:role => "form"}) do |f| %>      
    	<div class="form-group">
      	<%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Tu correo electrónico"%>      
        <% if @user.errors[:email] %>
          <span class="error-color"><%= @user.errors[:email][0] %></span>
        <% end %>
      </div>     
    	<div class="form-group">
    	  <%= f.password_field :password, :class => "form-control", :placeholder => "Tu contraseña"%>      
        <% if @user.errors[:password] %>
          <span class="error-color"><%= @user.errors[:password][0] %></span>
        <% end %>
      </div>     
    	<div class="form-group">
    	  <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Repite tu contraseña"%>      
        <% if @user.errors[:password_confirmation] %>
          <span class="error-color"><%= @user.errors[:password_confirmation][0] %></span>
        <% end %>
      </div>	      
     <div class="form-group">
      	<%= f.submit "Registrarme", :class => "btn btn-lg btn-primary" %>
      </div>   
    <% end %>
  </div>    
</div>