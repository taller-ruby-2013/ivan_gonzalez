<div class="row">	
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:role => "form"}) do |f| %>
	  <%= devise_error_messages! %>
	  <h2 class="form-signin-heading">Sign up</h2>
	  <div class="row">
	  	<div class="form-group col-md-8">
	  	<%= f.label :email %>
	  	<%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Your email", :required => true %>
	  </div>
	  </div>
	  
	  <div class="row">
	  	<div class="form-group col-md-8">
		  <%= f.label :password %>
		  <%= f.password_field :password, :class => "form-control", :placeholder => "Your password", :required => true %>
	  </div>
	  </div>
	  
	  <div class="row">
	  	<div class="form-group col-md-8">
		  <%= f.label :password_confirmation %>
		  <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Your password again", :required => true %>
	  </div>
	  </div>	  
	  <div class="row">
	  	 <div class="form-group col-md-8">
	  	<%= f.submit "Sign up", :class => "btn btn-primary" %>
	  </div>
	  </div>
	 
	<% end %>

	<%= render "devise/shared/links" %>
	
</div>

